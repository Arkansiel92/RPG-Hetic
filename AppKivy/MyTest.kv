<Play>
    Video:
        id: video_bg_play
        source: 'E:\Programme Python\Programme Python\AppKivy\divers\Enchanted Forest.mp4'
        state: 'play'
        loop: True
        allow_stretch: True

    Button:
        pos: 1000, 100
        id: go_game
        background_color : 0,0,0,0
        size_hint: 0.15,0.3
        on_release:
            root.manager.current = "StoryWindow"
            root.manager.transition.direction = "left"
        Image:
            id: img_go_game
            source: 'Img/Buttons/play_button.png'
            center_x: self.parent.center_x
            center_y: self.parent.center_y
